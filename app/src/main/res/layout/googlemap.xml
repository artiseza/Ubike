<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="Search Location Here" />


            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="onMapSearch"
                android:text="Search" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.75">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.viralandroid.googlemapsandroidapi.MapsActivity" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                android:text="ToggleButton"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:id="@+id/mToggleButton"
                android:background="@drawable/button_selector"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="280sp"
                android:layout_marginLeft="10sp"
                android:padding="120dp"
                    android:checked="false" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="103dp"
                    android:layout_height="99dp"
                    android:text="00:00"
                    android:textSize="15sp"
                    android:visibility="visible"
                    android:padding="20dp"
                    android:layout_marginTop="240sp"
                    android:layout_marginBottom="60sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/timer_selector">
                </TextView>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
