<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:background="@color/btn_orange2">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="5dp"
                android:hint="Search Location Here"
                android:background="@color/btn_white" />


            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="onMapSearch"
                android:text="Search"
                android:background="@color/btn_orange2" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5.75">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.viralandroid.googlemapsandroidapi.MapsActivity" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ToggleButton
                android:text="ToggleButton"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:id="@+id/mToggleButton"
                android:background="@drawable/button_selector"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="330sp"
                android:layout_marginLeft="10sp"
                    android:layout_marginRight="30sp"
                android:padding="120dp"
                    android:checked="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0åˆ†"
                        android:textSize="15sp"
                        android:visibility="visible"
                        android:layout_gravity="bottom"
                        android:paddingBottom="5dp"

                        android:layout_marginTop="340sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/timer_selector"
                        android:textAlignment="textEnd"
                        android:textStyle="normal|bold">
                    </TextView>

                    <TextView
                        android:text="$"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="200sp"
                        android:id="@+id/money"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
